
#include <stdio.h>
#include<math.h>

int main()
{
    float P,R,T,A,CI;
    printf("Enter Principle:");
    scanf("%f",&P);
    printf("Enter Rater of Interest:");
    scanf("%f",&R);
    printf("Enter Time:");
    scanf("%f",&T);
    A=P*pow((1+(R/100)),T);
    CI=A-P;
    printf("The compound interest is %.2f:",CI);

    return 0;
}